{
  "name": "@selvoc/gateway",
  "version": "0.1.0",
  "description": "",
  "author": "Anatoly Turcan <anatoly8293@gmail.com>",
  "private": true,
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anatoly-turcan/selvoc.git"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm",
    "migration:create": "npm run typeorm migration:create src/persistence/migrations/rename-me",
    "migration:generate": "npm run typeorm -- -d src/persistence/typeorm-cli.datasource.ts migration:generate src/persistence/migrations/rename-me",
    "migration:up": "npm run typeorm migration:run -- -d src/persistence/typeorm-cli.datasource.ts",
    "migration:down": "npm run typeorm migration:revert -- -d src/persistence/typeorm-cli.datasource.ts"
  },
  "dependencies": {
    "@apollo/gateway": "^2.10.2",
    "@apollo/server": "^4.11.2",
    "@nestjs/apollo": "^12.2.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.2.2",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/terminus": "^11.0.0",
    "@selvoc/nest-auth": "^0.1.0",
    "@selvoc/nest-logger-pino": "^0.1.0",
    "dotenv": "^16.4.7",
    "env-var": "^7.5.0",
    "graphql": "^16.10.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/supertest": "^6.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
